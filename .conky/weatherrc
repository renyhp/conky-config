	minimum_width = 450, minimum_height = 500,
	maximum_width = 450,

	override_utf8_locale = true,

-- Draw shades?
	draw_shades = false,

-- Text stuff
	draw_outline = false,-- amplifies text if yes
	draw_borders = false,
--font freesans -12
	font = 'Ubuntu Mono:normal:size=10',
